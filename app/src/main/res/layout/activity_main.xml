<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:scaleType="centerCrop"
               android:src="@drawable/sunset" android:layout_alignParentStart="true"
               android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:layout_marginStart="0dp"/>

    <TextView
        android:id="@+id/jalos_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:text="Jalostotitlan"/>

    <TextView
        android:id="@+id/jalisco_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/jalos_text"
        android:layout_marginStart="32dp"
        android:text="Jalisco"/>

</RelativeLayout>